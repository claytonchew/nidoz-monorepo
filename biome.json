{
	"root": true,
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"noHeaderScope": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noDuplicateObjectKeys": "warn",
				"noConfusingVoidType": "off",
				"useIterableCallbackReturn": "warn"
			},
			"performance": {
				"noDelete": "error",
				"noAccumulatingSpread": "warn"
			},
			"complexity": {
				"noBannedTypes": "warn",
				"noUselessSwitchCase": "warn",
				"noUselessTypeConstraint": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "off",
				"noUnknownFunction": "warn"
			},
			"nursery": {
				"noMisusedPromises": "error"
			}
		}
	},
	"html": {
		"experimentalFullSupportEnabled": true,
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!!**/node_modules",
			"!!**/dist",
			"!!**/tmp",
			"!!**/out-tsc",
			"!!**/out",
			"!!**/.output",
			"!!**/.data",
			"!!**/.cache",
			"!!**/.source",
			"!!**/.nx"
		]
	}
}
